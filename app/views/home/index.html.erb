<!--menu button-->
<div class="row">
  <div class="col-xs-12">
      <a href="/post/new" class="btn btn-warning">글쓰기</a>
  </div>
</div>
<!--page title-->
<div class="row">
  <div class="col-lg-12">
      <h1>개발자 포럼</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="table-responsive">
      <table class="table table-hover table-condensed post_table">
        <thead>
          <tr>
            <th class="col_post_id">번호</th>
            <th class="col_post_title">게시글 제목</th>
            <th class="col_post_creator">작성자</th>
            <th class="col_post_date">작성 날짜</th>
          </tr>
        </thead>
        <tbody id="myTable">
          <%
          @posts.each do |post|
          %>
          <tr class="clickable-row" data-href="/post/<%= post.id %>/read_post" id="read_post">
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.edit_user_name %></td>
            <td><%= post.created_at.to_formatted_s(:db) %></td>
          </tr>
          <%
          end
          %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <ul class="pagination pagination-lg pager" id="myPager"></ul>
    </div>
  </div>
  
</div>
