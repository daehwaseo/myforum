<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <h1>게시글 수정</h1>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <form action="/post/<%= @post.id %>/update" method="post">
                <div class="form-group">
                    <label for="board_title">Title</label>
                    <input type="text" class="form-control" id="board_title" name="board_title" placeholder="Title" value="<%= @post.title %>">
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea id="board_content" name="board_content"><%= @post.content %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">확인</button>
                <a class="btn btn-default active" href="/post/<%= @post.id %>/read_post">취소</a>
            </form>
    </div>
</div>

<script>
    CKEDITOR.replace('board_content');
    
</script>